@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center align-items-center">
    <div class="col-md-5">
        <div class="container border border-2 rounded shadow-lg">
            <section>
                <div class="mb-3 text-center">
                    <h3>KissSweet</h3>
                    <h5>登入</h5>
                    @*<h6>使用您的 KissSweet 帳戶</h6>*@
                </div>
                <form id="account" method="post">
                    <hr>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="電子信箱">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" id="password" placeholder="密碼">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>*@
                    <hr>
                    <div class="form-group mb-3">
                        <div class="d-grid gap-2 col-3 mx-auto">
                            <button type="submit" class="btn btn-secondary">登入</button>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="d-grid gap-1 col-3">
                            <a class="color-gray" id="forgot-password" asp-page="./ForgotPassword">忘記密碼?</a>
                        </div>
                        <div class="d-grid gap-1 col-3 offset-6">
                            <a class="color-gray" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">註冊會員</a>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
