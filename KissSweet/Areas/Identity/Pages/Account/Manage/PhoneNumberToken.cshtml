@page
@model PhoneNumberTokenModel

<h1>手機驗證</h1>
<partial name="_StatusMessage" model="Model.PhoneNumberTokenStatusMessage" />
<body onload="initial()">
    <div class="card shadow-sm rounded">
        <div class="row card-body">
            <div class="col-4"></div>
            <div class="col-4">
                @if (Model.DbPhoneNumberConfirmed)
                {
                    <a class="btn btn-primary btn-lg btn-block" asp-controller="Home" asp-action="Index">回首頁</a>
                }
                else
                {
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.PhoneNumberToken">簡訊驗證碼</label>
                            <input asp-for="Input.PhoneNumberToken" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumberToken" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">送出</button>
                    </form>
                }
            </div>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
