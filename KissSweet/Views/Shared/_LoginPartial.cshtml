@using Microsoft.AspNetCore.Identity
@using KissSweet.Areas.Identity.Data
@inject SignInManager<KissSweetUser> SignInManager
@inject UserManager<KissSweetUser> UserManager


<div class="position-relative">
    @if (SignInManager.IsSignedIn(User))
    {
        <form class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <a class="bi bi-person-fill btn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> 個人檔案</a>
            <a asp-area="" asp-controller="cart" asp-action="index" class="btn bi bi-cart-fill"> 購物車</a>
            <a href="#" class="mx-2 js-search-open"><span class="bi-search"></span></a>
            <button type="submit" class="mx-2 btn">登出</button>
        </form>
    }
    else
    {
        <a class="bi bi-person-fill btn" asp-area="Identity" asp-page="/Account/Login"> 登入</a>
        <a>/</a>
        <a class="btn" asp-area="Identity" asp-page="/Account/Register">註冊</a>
        <a asp-area="" asp-controller="cart" asp-action="index" class="btn bi bi-cart-fill"> 購物車</a>
        <a href="#" class="mx-2 js-search-open"><span class="bi-search"></span></a>
    }
    <i class="bi bi-list mobile-nav-toggle"></i>

    <!-- ======= Search Form ======= -->
    <div class="search-form-wrap js-search-form-wrap">
        <form action="search-result.html" class="search-form">
            <span class="icon bi-search"></span>
            <input type="text" placeholder="搜尋" class="form-control">
            <button class="btn js-search-close"><span class="bi-x"></span></button>
        </form>
    </div><!-- End Search Form -->
</div>
